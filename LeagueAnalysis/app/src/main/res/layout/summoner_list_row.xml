<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <TextView
        android:id="@+id/SummonerName"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="16dp"
        android:text="CLG Bigfatlk"
        android:textColor="#00e500"
        app:layout_constraintLeft_toRightOf="@+id/SummonerIcon"
        app:layout_constraintTop_toTopOf="@+id/SummonerIcon"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/SummonerLevel"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="level: 30"
        android:textColor="#00e500"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/SummonerName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SummonerRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Europe West"
        app:layout_constraintLeft_toRightOf="@+id/SummonerIcon"
        app:layout_constraintTop_toBottomOf="@+id/SummonerName" />

    <TextView
        android:id="@+id/SummonerLeague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Ranked 5x5: Volibears LABAGARE"
        app:layout_constraintLeft_toRightOf="@+id/SummonerIcon"
        app:layout_constraintTop_toBottomOf="@+id/SummonerRegion" />

    <TextView
        android:id="@+id/SummonerTier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Gold"
        app:layout_constraintLeft_toRightOf="@+id/SummonerIcon"
        app:layout_constraintTop_toBottomOf="@+id/SummonerLeague" />

    <ImageView
        android:id="@+id/SummonerIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/Aatrox"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>